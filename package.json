{
  "name": "teste-frontend-junior",
  "private": true,
  "scripts": {
    "build": "node ./scripts/build.js minify=true",
    "dev": "node ./scripts/build.js watch=true",
    "format": "prettier --write src",
    "serve:api": "node ./scripts/server.js",
