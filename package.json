    "start": "run-p dev serve:web",
    "test": "jest"
  },
  "devDependencies": {
    "@postlight/mercury-parser": "^2.2.1",
    "@types/jest": "^27.0.3",
    "esbuild": "^0.14.10",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-style-plugin": "^1.1.2",
    "jest": "^27.4.5",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
